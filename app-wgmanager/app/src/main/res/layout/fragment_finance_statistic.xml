<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.features.finance.fragments.FinanceStatisticFragment"
    android:background="@drawable/grade_background">

    <TextView
        android:id="@+id/stats_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:text="Statistics"/>

    <TextView
        android:id="@+id/finance_statistics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_statistics_for_period"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/stats_name" />

    <TextView
        android:id="@+id/finance_statistics_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/finance_statistics_title" />


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:flow_verticalAlign="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finance_statistics_period"
        app:layout_constraintVertical_bias="0.131">

        <TextView
            android:id="@+id/total_sum_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:text="@string/total_sum" />

        <TextView
            android:id="@+id/total_sum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/rl_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_average_label"
            android:textColor="@color/black"
            android:padding="3dip"
            android:fontFamily="sans-serif-medium"
            android:text="@string/average" />

        <TextView
            android:id="@+id/total_average_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="160dp"
            android:fontFamily="sans-serif"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/rl_2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_contributed_label"
            android:textColor="@color/black"
            android:padding="3dip"
            android:fontFamily="sans-serif-medium"
            android:text="@string/contributed" />

        <TextView
            android:id="@+id/total_contributed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="160dp"
            android:fontFamily="sans-serif"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/rl_3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_deviation_label"
            android:textColor="@color/black"
            android:padding="3dip"
            android:fontFamily="sans-serif-medium"
            android:text="@string/deviation" />

        <TextView
            android:id="@+id/total_deviation_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="160dp"
            android:fontFamily="sans-serif"
            android:padding="3dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/finance_statistics_title_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_statistics_of_all_times"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/rl_4" />

    <TextView
        android:id="@+id/finance_statistics_period_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/finance_statistics_title_all" />


    <RelativeLayout
        android:id="@+id/rl_1_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/finance_statistics_period_all"
        app:layout_constraintVertical_bias="0.131">

        <TextView
            android:id="@+id/total_sum_label_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:padding="3dip"
            android:text="@string/total_sum" />

        <TextView
            android:id="@+id/total_sum_value_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="160dp"
            android:fontFamily="sans-serif"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/rl_1_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_average_label_all"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:padding="3dip"
            android:text="@string/average" />

        <TextView
            android:id="@+id/total_average_value_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginStart="160dp"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/rl_2_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_contributed_label_all"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:padding="3dip"
            android:text="@string/contributed" />

        <TextView
            android:id="@+id/total_contributed_value_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginStart="160dp"
            android:padding="3dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/rl_3_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_deviation_label_all"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:padding="3dip"
            android:text="@string/deviation" />

        <TextView
            android:id="@+id/total_deviation_value_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginStart="160dp"
            android:padding="3dip" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>