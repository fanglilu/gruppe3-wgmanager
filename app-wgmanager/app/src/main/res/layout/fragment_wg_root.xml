<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wg_root.fragments.WgRootFragment"
    android:background="@drawable/grade_background">

    <TextView
        android:id="@+id/wg_overview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WGs Overview"
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/wg_overview_list_current_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="textStart"
        android:text="@string/current_wg"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/wg_overview_title"/>
    <include
        android:id="@+id/wg_overview_current"
        layout="@layout/list_item_with_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/wg_overview_list_current_wg" />

    <TextView
        android:id="@+id/wg_overview_list_your_wg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:text="@string/your_wgs"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/wg_overview_current" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="150dp"
        android:layout_below="@id/wg_overview_list_your_wg"
        android:layout_alignBottom="@id/linear_container"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wg_detail_recycler_view_features"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item_with_wg" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/wg_detail_button_logout_wg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/red"
            android:text="Logout"
            android:layout_alignParentBottom="true" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@id/wg_detail_button_logout_wg"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@id/wg_detail_button_delete_wg">

            <Button
                android:id="@+id/button_wg_create"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="10dp"
                android:text="@string/create" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_wg_join"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/join" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>