<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.features.calendar.fragments.CalendarDetailFragment"
    android:background="@drawable/grade_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/edit_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:hint="Event title"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:hint="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Start:"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editStartDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="PLACEHOLDER"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editStartTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="Start time"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="20dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="End:"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editEndDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif"
                android:hint="PLACEHOLDER"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editEndTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:hint="End time"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/edit_calender_user_list_view"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="false"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/delete_entry_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:text="Delete"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/back_to_calendar_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:layout_marginStart="10dp"
            android:text="BACK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/design_default_color_on_primary" />

        <Button
            android:id="@+id/edit_entry_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="EDIT"
            app:strokeColor="@color/design_default_color_on_primary" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>