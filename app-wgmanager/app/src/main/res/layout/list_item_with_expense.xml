<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/highlight_finance_recurring">

    <RelativeLayout
        android:id="@+id/list_item_with_expense"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/finance_list_item_expense_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/finance_list_item_expense_payer"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_below="@+id/finance_list_item_expense_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/finance_list_item_expense_date"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/finance_list_item_expense_price"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>