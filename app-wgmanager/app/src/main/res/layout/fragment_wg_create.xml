<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.wg_root.fragments.WgCreateFragment"
    android:background="@drawable/grade_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wg_create_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_a_new_wg"
        android:textSize="40sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/wg_create_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/wg_create_title"
        android:textColor="@color/black"
        android:text="Enter the name of the new WG:"/>

    <EditText
        android:id="@+id/wg_create_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wg_create_hint"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/my_first_wg"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/wg_create_hint_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/wg_create_name_input"
        android:text="Select the features in this WG:"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/wg_create_hint_features">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wg_create_recycler_view_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_item_with_checkbox" />

    </FrameLayout>

    <Button
        android:id="@+id/wg_create_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/create"
        android:visibility="visible"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>